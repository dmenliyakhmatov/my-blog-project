{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "allowSyntheticDefaultImports":true,
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "src"
  },
  "include": [
    "./src/*", "src/containers/Main/index.tsx"
  ],
  "files": [
    "./declaration.d.ts"
  ]
}